<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#222222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/videoView"
            android:layout_marginStart="9dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="82dp"
            android:layout_toEndOf="@+id/movieImageDetail"
            android:gravity="center|center_horizontal|left"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/releaseDetail"
            android:layout_width="216dp"
            android:layout_height="30dp"
            android:layout_below="@+id/titleDetail"
            android:layout_marginStart="11dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="-234dp"
            android:layout_marginBottom="-129dp"
            android:layout_toEndOf="@+id/movieImageDetail"
            android:text="TextView"
            android:textColor="#F0F0F0"
            android:textSize="20sp" />

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="241dp" />

        <ImageView
            android:id="@+id/movieImageDetail"
            android:layout_width="152dp"
            android:layout_height="212dp"
            android:layout_alignTop="@+id/videoView"
            android:layout_marginTop="191dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/poster_aquaman" />

        <TextView
            android:id="@+id/descDetail"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/movieImageDetail"
            android:layout_alignEnd="@+id/videoView"
            android:layout_marginTop="23dp"
            android:layout_marginEnd="62dp"
            android:background="#00FFFFFF"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            tools:layout_conversion_wrapHeight="935"
            tools:layout_conversion_wrapWidth="822"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="16dp" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>