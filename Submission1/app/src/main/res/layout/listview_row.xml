<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="270dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/homeBg"
            android:layout_width="match_parent"
            android:layout_height="309dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            tools:srcCompat="@drawable/poster_aquaman" />

        <ImageView
            android:id="@+id/blackBg"
            android:layout_width="325dp"
            android:layout_height="199dp"
            android:layout_alignTop="@+id/homeBg"
            android:layout_alignEnd="@+id/homeBg"
            android:layout_alignBottom="@+id/homeBg"
            android:layout_marginTop="34dp"
            android:layout_marginEnd="43dp"
            android:layout_marginBottom="37dp"
            android:alpha="0.7"
            app:srcCompat="@drawable/text_background" />

        <TextView
            android:id="@+id/homeTitle"
            android:layout_width="268dp"
            android:layout_height="116dp"
            android:layout_alignEnd="@+id/blackBg"
            android:layout_alignBottom="@+id/blackBg"
            android:layout_marginEnd="29dp"
            android:layout_marginBottom="68dp"
            android:gravity="center"
            android:text="TextView"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/homeRelease"
            android:layout_width="125dp"
            android:layout_height="33dp"
            android:layout_alignEnd="@+id/blackBg"
            android:layout_alignBottom="@+id/blackBg"
            android:layout_marginEnd="171dp"
            android:layout_marginBottom="31dp"
            android:text="TextView" />

        <Button
            android:id="@+id/homeDetailButton"
            android:layout_width="71dp"
            android:layout_height="35dp"
            android:layout_alignEnd="@+id/blackBg"
            android:layout_alignBottom="@+id/blackBg"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="8dp"
            android:backgroundTint="#FFC107"
            android:backgroundTintMode="src_in"
            android:ellipsize="end"
            android:forceDarkAllowed="false"
            android:foregroundTint="#FFC107"
            android:foregroundTintMode="add"
            android:text="Detail"
            android:textColorHighlight="#FFC107"
            android:textColorHint="#00B16F6F"
            android:textColorLink="#FFC107"
            android:textDirection="firstStrong"
            android:textIsSelectable="true"
            android:textSize="12sp"
            android:textStyle="bold" />

    </RelativeLayout>

</LinearLayout>