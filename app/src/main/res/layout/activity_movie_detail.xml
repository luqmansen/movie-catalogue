<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">

    <ScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#050000"
        android:backgroundTint="#181212"
        android:backgroundTintMode="add"
        android:foregroundGravity="bottom|center_vertical|fill"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top|left"
            android:gravity="top"
            android:orientation="horizontal"
            tools:layout_editor_absoluteY="8dp">

            <ImageView
                android:id="@+id/trailerView"
                android:layout_width="409dp"
                android:layout_height="268dp"
                android:alpha="10"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/poster_aquaman"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/descDetail"
                android:layout_width="377dp"
                android:layout_height="283dp"
                android:layout_marginTop="20dp"
                android:background="#00FFFFFF"
                android:baselineAligned="true"
                android:gravity="top"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                app:layout_constraintStart_toStartOf="@+id/movieImageDetail"
                app:layout_constraintTop_toBottomOf="@+id/movieImageDetail" />

            <ImageView
                android:id="@+id/blackTransparent"
                android:layout_width="411dp"
                android:layout_height="268dp"
                android:alpha="0.7"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/text_background"
                tools:layout_editor_absoluteX="1dp"
                tools:layout_editor_absoluteY="0dp" />

            <TextView
                android:id="@+id/watchTrailer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="132dp"
                android:shadowColor="#00EEE7E7"
                android:text="Watch trailer"
                android:textColor="#FDFDFD"
                android:textSize="36sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/blackTransparent"
                app:layout_constraintStart_toEndOf="@+id/playButton" />

            <TextView
                android:id="@+id/releaseDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="TextView"
                android:textColor="#F0F0F0"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/movieImageDetail"
                app:layout_constraintTop_toBottomOf="@+id/titleDetail" />

            <TextView
                android:id="@+id/titleDetail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:gravity="center|center_horizontal|left"
                android:text="Movie Title"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/movieImageDetail"
                app:layout_constraintTop_toBottomOf="@+id/blackTransparent" />

            <ImageView
                android:id="@+id/movieImageDetail"
                android:layout_width="130dp"
                android:layout_height="182dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="220dp"
                android:baselineAligned="false"
                android:scaleType="centerCrop"
                app:layout_constraintStart_toStartOf="@+id/blackTransparent"
                app:layout_constraintTop_toTopOf="@+id/blackTransparent"
                app:srcCompat="@drawable/poster_aquaman" />

            <ImageView
                android:id="@+id/playButton"
                android:layout_width="52dp"
                android:layout_height="48dp"
                android:layout_marginEnd="272dp"
                android:layout_marginBottom="132dp"
                app:layout_constraintBottom_toBottomOf="@+id/blackTransparent"
                app:layout_constraintEnd_toEndOf="@+id/blackTransparent"
                app:srcCompat="@android:drawable/ic_media_play" />

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#222222">

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>