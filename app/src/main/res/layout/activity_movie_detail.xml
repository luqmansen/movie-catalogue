<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MovieDetailActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#222222"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="370dp"
            android:layout_height="287dp"
            android:layout_below="@+id/movieImageDetail"
            android:layout_alignStart="@+id/movieImageDetail"
            android:layout_marginStart="12dp"
            android:layout_marginTop="19dp"
            android:foregroundGravity="bottom|center_vertical|fill">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_gravity="top|left"
                android:gravity="top"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/descDetail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="0dp"
                    android:background="#00FFFFFF"
                    android:baselineAligned="true"
                    android:gravity="top"
                    android:text="TextView"
                    android:textAlignment="viewStart"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    tools:layout_conversion_wrapHeight="935"
                    tools:layout_conversion_wrapWidth="822" />

            </LinearLayout>
        </ScrollView>

        <TextView
            android:id="@+id/titleDetail"
            android:layout_width="254dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trailerView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="82dp"
            android:layout_toEndOf="@+id/movieImageDetail"
            android:gravity="center|center_horizontal|left"
            android:text="TextView"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/trailerView"
            android:layout_width="match_parent"
            android:layout_height="245dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:alpha="10"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/poster_aquaman" />

        <ImageView
            android:id="@+id/blackTransparent"
            android:layout_width="match_parent"
            android:layout_height="246dp"
            android:layout_alignEnd="@+id/trailerView"
            android:layout_alignBottom="@+id/trailerView"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="-1dp"
            android:alpha="0.7"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/text_background" />

        <TextView
            android:id="@+id/releaseDetail"
            android:layout_width="216dp"
            android:layout_height="30dp"
            android:layout_below="@+id/titleDetail"
            android:layout_marginStart="11dp"
            android:layout_marginTop="13dp"
            android:layout_marginEnd="-234dp"
            android:layout_marginBottom="-129dp"
            android:layout_toEndOf="@+id/movieImageDetail"
            android:text="TextView"
            android:textColor="#F0F0F0"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/movieImageDetail"
            android:layout_width="152dp"
            android:layout_height="212dp"
            android:layout_alignStart="@+id/trailerView"
            android:layout_alignTop="@+id/videoView"
            android:layout_marginStart="8dp"
            android:layout_marginTop="191dp"
            android:baselineAligned="false"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/poster_aquaman" />

        <TextView
            android:id="@+id/watchTrailer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/blackTransparent"
            android:layout_alignBottom="@+id/blackTransparent"
            android:layout_marginEnd="73dp"
            android:layout_marginBottom="92dp"
            android:shadowColor="#00EEE7E7"
            android:text="Watch trailer"
            android:textColor="#FDFDFD"
            android:textSize="36sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="50dp"
            android:layout_height="46dp"
            android:layout_above="@+id/watchTrailer"
            android:layout_marginEnd="-4dp"
            android:layout_marginBottom="-49dp"
            android:layout_toStartOf="@+id/watchTrailer"
            app:srcCompat="@android:drawable/ic_media_play" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>